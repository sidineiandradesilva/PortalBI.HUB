@model  Base.Entity.Recebimentohub

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script runat="server">

    void Page_Load(Object sender, EventArgs e)
    {
        // Manually register the event-handling method for
        // the Click event of the Button control.
        Cancelar.Click += new EventHandler(this.BtnClear_click);
    }

    void BtnClear_click(Object sender,
        EventArgs e)
    {
        //Script Limpar Campos ao click no botão Cancelar da tela de Cadastro//

        DataRecebimento = "";
        HoraRecebimento = "";
        Selectcliente = "";
        Hora_Inicial = "";
        Hora_Final = "";
        Volume = "";
        TipoEmbalagem = "";
        Placa = "";
    }

</script>
